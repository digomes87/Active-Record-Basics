<%= form_with model: @post do |p|%>

  <%= p.label :title, "Title" %>
  <%= p.text_field :title %><br>

  <%= p.label :body, "Body" %>
  <%= p.text_field :body %><br>

  <%= p.label :author_id, "Author ID" %>
  <%= p.hidden_field :author_id, value: Author.find_by(id: session[:user_id]).try(:id) %>
  
  <%= p.submit %>

 <% end %> 