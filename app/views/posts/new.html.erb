<%= form_with model: @post do |p|%>

  <%= p.label :title, "Title" %>
  <%= p.text_field :title %><br>

  <%= p.label :body, "Body" %>
  <%= p.text_field :body %><br>

  <%= p.label :author_id, "Author ID" %>
  <%= p.select(:author_id, Author.all.collect { |p| [ p.username, p.id ] }, { include_blank: 'None' }) %><br>
  
  <%= p.submit %>

 <% end %> 