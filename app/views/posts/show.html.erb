<% @p = Post.find(params[:id]) %>

<h1><%= @p.title %></h1>

<p> <%= @p.body  %> </p>

<p> <%= @p.author.username  %> </p>

<a href="<%= params[:id] %>/authors/1/comments/new">comment</a>

<h3>Comments : </h3>
<ul>
<% @p.comment.each do |c| %>
  <li><%= c.title %>
    <p>
      <%= c.body %>
    </p>

    <span>user : <%= c.author.username %></span>
  </li>
  <br>
<% end %>
</ul>


