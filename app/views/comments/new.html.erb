<%= form_with model: [@post, @auth, @com] do |p|%>

  <%= p.label :title, "Title" %>
  <%= p.text_field :title %><br>

  <%= p.label :body, "Body" %>
  <%= p.text_field :body %><br>

  <%= p.hidden_field :author_id, value: Author.find(session[:user_id]).id %>
  <%= p.hidden_field :post_id, value: params[:post_id] %>
  
  <%= p.submit %>

 <% end %> 

